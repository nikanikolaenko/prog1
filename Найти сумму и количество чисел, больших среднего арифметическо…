using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;


namespace SoloLearn
{
	class Program
	{
		static void Main(string[] args)
		{int[] array={1,2,3,4,5,6};
int sas=0;
for (int i=0; i<array.Length; i++)
     sas+=array[i];
int mid=sas/array.Length;
int sum=0;
int fer=0;
for (int i=0; i<array.Length; i++)

{if (mid<array[i])
{sum+=array[i];
fer+=1;
}
}
Console.WriteLine("The amount is equal to"); Console.WriteLine(sum);
Console.WriteLine("The number of digits is equal to"); Console.WriteLine(fer);


		}
	}
}
